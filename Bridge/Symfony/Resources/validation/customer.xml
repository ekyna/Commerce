<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Component\Commerce\Customer\Entity\Customer">
        <constraint name="Ekyna\Component\Commerce\Bridge\Symfony\Validator\Constraints\Identity">
            <option name="groups">
                <value>Default</value>
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>
        <property name="company">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">35</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="email">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="phone">
            <constraint name="Misd\PhoneNumberBundle\Validator\Constraints\PhoneNumber">
                <option name="type">fixed_line</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="mobile">
            <constraint name="Misd\PhoneNumberBundle\Validator\Constraints\PhoneNumber">
                <option name="type">mobile</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="customerGroup">
            <constraint name="NotNull">
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="vatNumber">
            <constraint name="Antalaron\Component\VatNumberValidator\VatNumber">
                <option name="groups">
                    <value>Default</value>
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="creditBalance">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="outstandingLimit">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="parent">
            <constraint name="Valid" />
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">email</option>
            <option name="groups">
                <value>Default</value>
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>
        <constraint name="Ekyna\Component\Commerce\Bridge\Symfony\Validator\Constraints\Customer">
            <option name="groups">
                <value>Default</value>
                <value>Registration</value>
                <value>Profile</value>
            </option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Customer\Entity\CustomerAddress">
        <property name="customer">
            <constraint name="NotNull">
                <option name="groups">
                    <value>Default</value>
                    <value>CustomerAddress</value>
                    <value>Registration</value>
                </option>
            </constraint>
        </property>
        <!--<constraint name="Ekyna\Component\Commerce\Bridge\Symfony\Validator\Constraints\Address">
            <option name="groups">
                <value>Default</value>
                <value>Registration</value>
            </option>
        </constraint>-->
    </class>

    <class name="Ekyna\Component\Commerce\Customer\Entity\CustomerGroup">
        <property name="name">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">64</option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Customer\Entity\CustomerGroupTranslation">
        <property name="title">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="max">64</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
