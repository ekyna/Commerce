<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Component\Commerce\Pricing\Entity\Tax">
        <property name="name">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">64</option>
            </constraint>
        </property>
        <property name="rate">
            <constraint name="NotBlank"/>
            <constraint name="GreaterThanOrEqual">0</constraint>
            <constraint name="LessThanOrEqual">100</constraint>
        </property>
        <property name="country">
            <constraint name="NotNull"/>
        </property>
        <!--<property name="state">
            <constraint name="NotNull"/>
        </property>-->
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Pricing\Entity\TaxGroup">
        <property name="name">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">64</option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Pricing\Entity\TaxRule">
        <property name="name">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">64</option>
            </constraint>
        </property>
        <property name="priority">
            <constraint name="NotBlank"/>
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="mentions">
            <constraint name="Valid"/>
        </property>
        <constraint name="Ekyna\Component\Commerce\Bridge\Symfony\Validator\Constraints\TaxRule"/>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
    </class>

</constraint-mapping>
