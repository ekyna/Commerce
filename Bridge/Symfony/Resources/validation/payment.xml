<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Component\Commerce\Payment\Entity\AbstractPayment">
        <property name="number">
            <constraint name="Length">
                <option name="min">8</option>
                <option name="max">16</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="key">
            <constraint name="Length">
                <option name="min">32</option>
                <option name="max">32</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="currency">
            <constraint name="NotNull">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="method">
            <constraint name="NotNull">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="amount">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
            <constraint name="GreaterThan">
                <option name="value">0</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="state">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
            <constraint name="Choice">
                <option name="callback">
                    <value>Ekyna\Component\Commerce\Payment\Model\PaymentStates</value>
                    <value>getStates</value>
                </option>
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="description">
            <constraint name="Length">
                <option name="max">255</option>
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="createdAt">
            <constraint name="DateTime">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="updatedAt">
            <constraint name="DateTime">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <property name="completedAt">
            <constraint name="DateTime">
                <option name="groups">
                    <value>Default</value>
                    <value>Checkout</value>
                </option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">number</option>
            <option name="groups">
                <value>Default</value>
                <value>Checkout</value>
            </option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Payment\Entity\PaymentMethod">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Payment\Entity\PaymentMethodMessage">
        <property name="state">
            <constraint name="NotBlank"/>
            <constraint name="Choice">
                <option name="callback">
                    <value>Ekyna\Component\Commerce\Payment\Model\PaymentStates</value>
                    <value>getStates</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="Ekyna\Component\Commerce\Payment\Entity\PaymentTerm">
        <property name="name">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">128</option>
            </constraint>
        </property>
        <property name="days">
            <constraint name="NotNull"/>
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="trigger">
            <constraint name="NotNull"/>
            <constraint name="Choice">
                <option name="callback">
                    <value>Ekyna\Component\Commerce\Payment\Model\PaymentTermTriggers</value>
                    <value>getTriggers</value>
                </option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
        </constraint>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>days</value>
                <value>endOfMonth</value>
                <value>trigger</value>
            </option>
        </constraint>
    </class>

    <class name="Ekyna\Component\Commerce\Payment\Entity\PaymentTermTranslation">
        <property name="title">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="max">255</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
