<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Manufacture\Entity\BillOfMaterials"
            table="commerce_bill_of_materials">

        <indexes>
            <index columns="number" name="idx_commerce_bill_of_materials_number"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="number,version" name="unique_commerce_bill_of_materials_number"/>
            <unique-constraint columns="subject_provider,subject_identifier,version" name="unique_commerce_manufacture_bom_version"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="number" column="number" type="string" length="16"/>
        <field name="version" column="version" type="smallint"/>
        <field name="state" type="string" column="state" length="9" enum-type="Ekyna\Component\Commerce\Manufacture\Model\BOMState"/>
        <field name="cost" column="cost" type="php_decimal" precision="10" scale="5" nullable="true"/>
        <field name="description" column="description" type="text" nullable="true"/>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <one-to-many target-entity="Ekyna\Component\Commerce\Manufacture\Model\BOMComponentInterface"
                     field="components" mapped-by="bom" orphan-removal="true" index-by="id">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

    </mapped-superclass>

</doctrine-mapping>
