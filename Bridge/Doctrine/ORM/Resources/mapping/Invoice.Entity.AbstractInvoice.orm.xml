<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Component\Commerce\Invoice\Entity\AbstractInvoice">

        <field name="type" column="type" type="string" length="16"/>
        <field name="number" column="number" type="string" length="16"/>
        <field name="currency" column="currency" type="string" length="8"/>

        <field name="customer" column="customer" type="json_array"/>
        <field name="invoiceAddress" column="invoice_address" type="json_array"/>
        <field name="deliveryAddress" column="delivery_address" type="json_array" nullable="true"/>
        <field name="relayPoint" column="relay_point" type="json_array" nullable="true"/>

        <field name="goodsBase" column="goods_base" type="decimal" precision="12" scale="5"/>
        <field name="discountBase" column="discount_base" type="decimal" precision="12" scale="5"/>
        <field name="shipmentBase" column="shipment_base" type="decimal" precision="12" scale="5"/>
        <field name="taxesTotal" column="taxes_total" type="decimal" precision="12" scale="5"/>
        <field name="taxesDetails" column="taxes_details" type="json_array"/>
        <field name="grandTotal" column="grand_total" type="decimal" precision="12" scale="5"/>

        <field name="comment" column="comment" type="text" nullable="true"/>
        <field name="description" column="description" type="text" nullable="true"/>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one target-entity="Ekyna\Component\Commerce\Payment\Model\PaymentMethodInterface" field="paymentMethod">
            <join-column name="payment_method_id" referenced-column-name="id" on-delete="RESTRICT" nullable="true"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
