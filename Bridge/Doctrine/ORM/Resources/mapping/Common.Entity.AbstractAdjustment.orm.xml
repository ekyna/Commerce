<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Component\Commerce\Common\Entity\AbstractAdjustment">

        <field name="designation" column="designation" type="string" length="255" nullable="true"/>
        <field name="type" column="type" type="string" length="16"/>
        <field name="mode" column="mode" type="string" length="16"/>
        <field name="amount" column="amount" type="php_decimal" precision="15" scale="5"/>
        <field name="immutable" column="immutable" type="boolean"/>
        <field name="source" column="source" type="string" length="64" nullable="true"/>

    </mapped-superclass>

</doctrine-mapping>
