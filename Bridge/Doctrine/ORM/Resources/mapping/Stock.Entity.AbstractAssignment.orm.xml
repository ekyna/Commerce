<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Ekyna\Component\Commerce\Stock\Entity\AbstractAssignment"
            table="commerce_stock_assignment"
            inheritance-type="SINGLE_TABLE">

        <unique-constraints>
            <unique-constraint columns="stock_unit_id,order_item_id" name="unique_commerce_stock_unit_order_item"/>
        </unique-constraints>

        <discriminator-column name="type" type="string"/>

        <discriminator-map>
            <discriminator-mapping value="order_item" class="Ekyna\Component\Commerce\Order\Entity\OrderItemAssignment"/>
            <discriminator-mapping value="production_item" class="Ekyna\Component\Commerce\Manufacture\Entity\ProductionItemAssignment"/>
        </discriminator-map>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="soldQuantity" column="sold_quantity" type="php_decimal" precision="10" scale="3" nullable="false">
            <options><option name="default">0</option></options>
        </field>
        <field name="shippedQuantity" column="shipped_quantity" type="php_decimal" precision="10" scale="3" nullable="false">
            <options><option name="default">0</option></options>
        </field>
        <field name="lockedQuantity" column="locked_quantity" type="php_decimal" precision="10" scale="3" nullable="false">
            <options><option name="default">0</option></options>
        </field>

        <many-to-one target-entity="Ekyna\Component\Commerce\Stock\Entity\AbstractStockUnit"
                     field="stockUnit" inversed-by="stockAssignments">
            <join-column name="stock_unit_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
