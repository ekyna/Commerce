<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Component\Commerce\Shipment\Entity\AbstractShipmentParcel">

        <field name="weight" column="weight" type="decimal" precision="10" scale="3" nullable="false"/>
        <field name="valorization" column="valorization" type="decimal" precision="13" scale="3" nullable="true"/>
        <field name="trackingNumber" column="tracking_number" type="string" length="32" nullable="true"/>

    </mapped-superclass>

</doctrine-mapping>
