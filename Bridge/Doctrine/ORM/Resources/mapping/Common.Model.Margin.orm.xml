<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="Ekyna\Component\Commerce\Common\Model\Margin">

        <field name="revenueProduct" column="revenue_product" type="php_decimal" precision="15" scale="5" />
        <field name="revenueShipment" column="revenue_shipment" type="php_decimal" precision="15" scale="5" />
        <field name="costProduct" column="cost_product" type="php_decimal" precision="15" scale="5" />
        <field name="costSupply" column="cost_supply" type="php_decimal" precision="15" scale="5" />
        <field name="costShipment" column="cost_shipment" type="php_decimal" precision="15" scale="5" />
        <field name="average" column="is_average" type="boolean"/>

    </embeddable>

</doctrine-mapping>
