<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Ekyna\Component\Commerce\Order\Entity\OrderShipment"
            table="commerce_order_shipment">

        <indexes>
            <index columns="number" name="idx_commerce_order_shipment_number"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="number" name="unique_commerce_order_shipment_number"/>
        </unique-constraints>

        <entity-listeners>
            <entity-listener class="Ekyna\Component\Commerce\Common\Listener\ShipmentNotifyListener"/>
        </entity-listeners>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <one-to-one target-entity="Ekyna\Component\Commerce\Order\Entity\OrderInvoice"
                    field="invoice" inversed-by="shipment">
            <join-column name="invoice_id" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
        </one-to-one>

        <one-to-many target-entity="Ekyna\Component\Commerce\Order\Entity\OrderShipmentItem"
                     field="items" mapped-by="shipment" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Order\Entity\OrderShipmentParcel"
                     field="parcels" mapped-by="shipment" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Order\Entity\OrderShipmentLabel"
                     field="labels" mapped-by="shipment" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Component\Commerce\Order\Model\OrderInterface"
                     field="order" inversed-by="shipments">
            <join-column name="order_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
