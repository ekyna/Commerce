<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Quote\Entity\Quote"
            table="commerce_quote">

        <indexes>
            <index columns="number" name="idx_commerce_quote_number"/>
            <index columns="secret" name="idx_commerce_quote_secret"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="number" name="unique_commerce_quote_number"/>
            <unique-constraint columns="secret" name="unique_commerce_quote_secret"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="editable" column="editable" type="boolean" nullable="false"/>
        <field name="expiresAt" column="expires_at" type="datetime"/>
        <field name="projectDate" column="project_date" type="datetime" nullable="true"/>
        <field name="projectTrust" column="project_trust" type="smallint" nullable="true"/>
        <field name="projectAlive" column="project_alive" type="boolean" nullable="true"/>

        <one-to-one target-entity="Ekyna\Component\Commerce\Quote\Model\QuoteAddressInterface"
                    field="invoiceAddress" inversed-by="invoiceQuote" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="invoice_address_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false"/>
        </one-to-one>

        <one-to-one target-entity="Ekyna\Component\Commerce\Quote\Model\QuoteAddressInterface"
                    field="deliveryAddress" inversed-by="deliveryQuote" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="delivery_address_id" referenced-column-name="id" on-delete="RESTRICT" nullable="true"/>
        </one-to-one>

        <one-to-one target-entity="Ekyna\Component\Commerce\Quote\Model\QuoteAddressInterface"
                    field="destinationAddress" inversed-by="destinationQuote" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="destination_address_id" referenced-column-name="id" on-delete="RESTRICT" nullable="true"/>
        </one-to-one>

        <one-to-many target-entity="Ekyna\Component\Commerce\Quote\Entity\QuoteAttachment"
                     field="attachments" mapped-by="quote" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="createdAt" direction="DESC"/>
            </order-by>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Quote\Entity\QuoteItem"
                     field="items" mapped-by="quote" orphan-removal="true" index-by="id">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="position" direction="ASC"/>
            </order-by>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Quote\Entity\QuoteAdjustment"
                     field="adjustments" mapped-by="quote" orphan-removal="true" index-by="id">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="position" direction="ASC"/>
            </order-by>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Quote\Entity\QuoteNotification"
                     field="notifications" mapped-by="quote" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="sentAt" direction="DESC"/>
            </order-by>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Quote\Model\QuotePaymentInterface"
                     field="payments" mapped-by="quote" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="createdAt" direction="ASC"/>
            </order-by>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface" field="initiatorCustomer">
            <join-column name="initiator_customer_id" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
        </many-to-one>

        <many-to-one target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface" field="followerCustomer">
            <join-column name="follower_customer_id" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
        </many-to-one>

        <many-to-one field="project"
                     target-entity="Ekyna\Component\Commerce\Common\Model\ProjectInterface"
                     inversed-by="quotes">
            <join-column name="project_id" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
