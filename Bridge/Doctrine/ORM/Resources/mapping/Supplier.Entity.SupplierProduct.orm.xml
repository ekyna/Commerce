<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Supplier\Entity\SupplierProduct"
            table="commerce_supplier_product">

        <indexes>
            <index columns="reference" name="idx_commerce_supplier_product_reference"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="supplier_id,subject_provider,subject_identifier" name="unique_commerce_supplier_product_subject"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="reference" column="reference" type="string" length="64"/>
        <field name="packing" column="packing" type="php_decimal" precision="10" scale="3">
            <options>
                <option name="default">1.000</option>
            </options>
        </field>
        <field name="availableStock" column="available_stock" type="php_decimal" precision="10" scale="3">
            <options>
                <option name="default">0.000</option>
            </options>
        </field>
        <field name="orderedStock" column="ordered_stock" type="php_decimal" precision="10" scale="3">
            <options>
                <option name="default">0.000</option>
            </options>
        </field>
        <field name="estimatedDateOfArrival" column="estimated_date_of_arrival" type="datetime" nullable="true"/>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one target-entity="Ekyna\Component\Commerce\Supplier\Model\SupplierInterface" field="supplier">
            <join-column name="supplier_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
