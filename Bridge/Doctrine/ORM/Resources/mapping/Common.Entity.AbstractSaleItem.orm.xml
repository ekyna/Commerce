<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Component\Commerce\Common\Entity\AbstractSaleItem">

        <field name="descriptions" column="descriptions" type="json"/>
        <field name="quantity" column="quantity" type="php_decimal" precision="10" scale="3"/>
        <field name="compound" column="compound" type="boolean"/>
        <field name="immutable" column="immutable" type="boolean"/>
        <field name="configurable" column="configurable" type="boolean"/>
        <field name="private" column="private" type="boolean"/>
        <field name="data" column="data" type="json"/>

    </mapped-superclass>

</doctrine-mapping>
