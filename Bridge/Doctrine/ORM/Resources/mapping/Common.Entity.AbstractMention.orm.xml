<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Component\Commerce\Common\Entity\AbstractMention">

        <field name="documentTypes" column="document_types" type="simple_array" nullable="false"/>

        <field name="position" type="integer" column="position">
            <gedmo:sortable-position/>
        </field>

    </mapped-superclass>

</doctrine-mapping>
