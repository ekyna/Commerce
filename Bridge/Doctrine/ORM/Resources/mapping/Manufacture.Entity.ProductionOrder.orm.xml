<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Manufacture\Entity\ProductionOrder"
            table="commerce_production_order">

        <indexes>
            <index columns="number" name="idx_commerce_production_order_number"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="number" name="unique_commerce_production_order_number"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="number" column="number" type="string" length="16"/>
        <field name="state" type="string" column="state" length="9" enum-type="Ekyna\Component\Commerce\Manufacture\Model\POState"/>
        <field name="startAt" type="datetime" column="start_at" nullable="true" />
        <field name="endAt" type="datetime" column="end_at" nullable="true" />
        <field name="quantity" type="integer" column="quantity"/>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <one-to-one target-entity="Ekyna\Component\Commerce\Stock\Entity\AbstractStockUnit"
                    field="stockUnit" mapped-by="productionOrder"/>

        <many-to-one target-entity="Ekyna\Component\Commerce\Manufacture\Model\BillOfMaterialsInterface"
                     field="bom">
            <join-column name="bom_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one target-entity="Ekyna\Component\Commerce\Stock\Model\WarehouseInterface" field="warehouse">
            <join-column name="warehouse_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false"/>
        </many-to-one>

        <one-to-many target-entity="Ekyna\Component\Commerce\Manufacture\Entity\ProductionItem"
                     field="items" mapped-by="order" orphan-removal="true" index-by="id">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Manufacture\Model\ProductionInterface"
                     field="productions" mapped-by="productionOrder" orphan-removal="true" index-by="id">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

    </mapped-superclass>

</doctrine-mapping>
