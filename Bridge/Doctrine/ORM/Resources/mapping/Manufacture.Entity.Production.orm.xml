<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Manufacture\Entity\Production"
            table="commerce_production">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="number" type="integer" column="number"/>
        <field name="quantity" type="integer" column="quantity"/>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one target-entity="Ekyna\Component\Commerce\Manufacture\Model\ProductionOrderInterface"
                     field="productionOrder" inversed-by="productions">
            <join-column name="order_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
